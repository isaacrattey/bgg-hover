{
    "manifest_version": 3,
    "name": "BGG Hover",
    "description": "Save time navigating BGG",
    "version": "1.0.1",
    "permissions": [
      "activeTab",
      "webRequest"
    ],
    "host_permissions": [
      "https://boardgamegeek.com/"
    ],
    "action": {
      "default_icon": "hello_extensions.png"
    },
    "web_accessible_resources": [
      {
        "resources": [ "hoverWindow.html" ],
        "matches": [ "<all_urls>" ]
      }
    ],
    "content_scripts": [
      {
          "js": [
              "js/libs/jquery-3.6.4.min.js",
              "js/background.js"
          ],
          "matches": ["<all_urls>"],
          "all_frames": true
    } ]
}