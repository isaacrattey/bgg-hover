{
    "manifest_version": 3,
    "name": "BGG Hover",
    "description": "Save time navigating BGG",
    "version": "1.0.5",
    "permissions": [
      "tabs", "storage"
    ],
    "icons": { "16": "icons/logo16.png",
      "32": "icons/logo32.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png" },
    "web_accessible_resources": [
      {
        "resources": [ "html/hoverWindow.html" ],
        "matches": [ "https://boardgamegeek.com/*" ]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "BGG Token"
    },
    "content_scripts": [
      {
          "js": [
              "js/libs/jquery-3.6.4.min.js",
              "contentScript.js"
          ],
          "css": ["css/style.css"],
          "matches": ["https://boardgamegeek.com/*"],
          "all_frames": true,
          "run_at": "document_idle"
    } ]
}